# Docker Compose 环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# ========== 服务配置 ==========
PORT=8001
WORKERS=1
DEBUG=false
ENVIRONMENT=production

# ========== 模型配置 ==========
MODEL_DIR=./models
DEVICE=cuda
PRELOAD_MODELS=true

# ========== OCR 配置 ==========
OCR_MODE=local
OCR_LANG=ch
USE_ANGLE_CLS=true

# ========== 日志配置 ==========
LOG_LEVEL=INFO
LOG_FORMAT=json

# ========== 资源限制 ==========
CPU_LIMIT=4.0
MEMORY_LIMIT=8G
CPU_THREADS=4
